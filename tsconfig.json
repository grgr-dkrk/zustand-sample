{
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2018", "dom"],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "node_modules"]
}
